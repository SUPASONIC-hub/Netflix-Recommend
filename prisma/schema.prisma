generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Content {
  id           String    @id
  tmdbId       String
  title        String
  name         String
  overview     String
  releaseDate  String
  firstAirDate String
  posterPath   String
  posterUrl    String
  backdropPath String
  genreIds     Int[]
  popularity   Float?
  voteAverage  Float?
  voteCount    Int?
  adult        Boolean?
  mediaType    String
  year         String
  type         String
  myNote       String
  myRating     Float
  tags         String[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  comments     Comment[]
}

model Comment {
  id        String   @id
  contentId String
  nickname  String
  text      String
  createdAt DateTime @default(now())

  content   Content  @relation(fields: [contentId], references: [id], onDelete: Cascade)
}
